{
  "manifest_version": 2,
  "name"       : "tabs",
  "description": "chrome tab manager",
  "version"    : "0.1.5",
  "icons": {
    "19" : "images/OverTab_19.png",
    "32" : "images/OverTab_32.png",
    "48" : "images/OverTab_48.png",
    "128": "images/OverTab_128.png"
  },

  "browser_action" : {
    "default_title": "tabs",
    "default_icon" : "images/OverTab_32.png"
  },

  "background": {
    "page": "background.html"
  },
  "homepage_url"          : "http://overtab.co",
  "minimum_chrome_version": "13.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js"     : [
                  "js/angular.min.js",
                  "js/app.js"
      ]
    }
  ],
  //"options_page": "options.html",
  "permissions" : [
    "background",
    "tabs",
    "storage",
    "history",
    "<all_urls>"
  ]
}
